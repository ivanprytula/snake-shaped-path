[flake8]
select = B,B9,BLK,C,E,F,I,S,W
# line length, whitespace before ':'
ignore = E203,E501,W503
per-file-ignores =
    # imported but unused
    __init__.py:F401,
    tests/*:S101
exclude =
    .venv,
    .idea,
    .vscode,
    .github,
    **/migrations
max-complexity = 10
max-line-length = 88
import-order-style = google
