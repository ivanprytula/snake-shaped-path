root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4

[{*.py,*.pyw}]
max_line_length = 88

[*.html]
tab_width = 2
indent_size = 2
max_line_length = 120

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.yaml,*.yml}]
indent_size = 2
